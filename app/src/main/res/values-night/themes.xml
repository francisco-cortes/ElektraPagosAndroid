<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ElektraPagos" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/elektra_red</item>
        <item name="colorPrimaryVariant">@color/elektra_red</item>
        <item name="colorOnPrimary">@color/elektra_white_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/elektra_red</item>
        <item name="colorSecondaryVariant">@color/elektra_red</item>
        <item name="colorOnSecondary">@color/elektra_light_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
</resources>